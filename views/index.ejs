<!DOCTYPE html>
<html lang="en">
<%- include ('./partials/head',{styles: 'static/css/index.css', titulo:'Home'})%>
<body>
<%- include('./partials/header') %>
    <main>
        <section>
            <div class="slideshow-container">
                <img src="static/images/slideshow-image-1.jpg" class="slideshow-images"> 
            </div>
        </section>
        <section>
            <h3>Art√≠culos con descuento</h3>
            <div class="contenedor-articulos">
                <% for (let n=0;n<=3;n++) { %>
                <article><img src="static/images/products/<%= products[n].image %>" alt=<%= products[n].name %> class="img-articulo">
                    <a href="products/<%= products[n].id %>">
                        <div class="articulo">
                            <h5 class="descripcion"><%= products[n].name %></h5>
                            <h5 class="descripcion"><%= products[n].discount %>%</h5>
                            <!-- <a href="/productDetail.ejs">Ver detalles</a> -->
                        </div>
                    </a>
                </article>
                <% } %>
            </div>
        </section>
    </main>
<%- include('./partials/footer') %>
</body>
</html>