<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>
<body>
<%- include('./partials/header') %>
    <main class="login-register">
        <div class="full">
            <div class="izquierda">
                <form action="/login" method="POST">
                    <h2>Inicia sesion</h2>
                    <input type="email" placeholder="Email de usuario" name="email" 
                    value= "<%= locals.oldData ? oldData.email : null %>">
                    <% if (locals.errors && errors.email ) { %>
                        <p class="error"><%= errors.email.msg %>  </p>
                    <% } %>
                    <input type="password" placeholder="Contraseña" name= "password">
                    <% if (locals.errors && errors.password ) { %>
                        <p class="error"><%= errors.password.msg %>  </p>
                    <% } %>
                    <label><input type="checkbox" id="recordarme" value="recordarme"> Recordarme </label><br>
                    <button type="submit">Iniciar</button>
                </form>
            </div>
            <div class="derecha">
                <h2>¿Aun no tienes cuenta?</h2>
                <button onclick="location.href='/register'">Registrarse</button>
            </div>
        </div>
    </main>
    <%- include('./partials/footer') %>
    </body>
</html>