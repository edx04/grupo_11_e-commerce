<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>


    <body>
        <%- include('./partials/header') %>

            <main>
                <section>
                    <div class="slideshow-container">
                        <img src="/static/images/slideshow-image-1.jpg" class="slideshow-images">
                    </div>
                </section>
                <section>
                    <h3>Todos los productos </h3>
                    <div class="contenedor-articulos">
                        <% products.forEach((product) => { %>
                            <article><img src="/static/images/products/<%- product.image %>" alt= <%- product.name %> class="img-articulo">
                                <div class="articulo">
                                    <h5 class="descripcion"><%- product.name %></h5>
                                </div>
                            </article>

                        <% }) %>
                       

                      
                        
                    </div>
                </section>

            </main>
            <%- include('./partials/footer') %>

    </body>

</html>